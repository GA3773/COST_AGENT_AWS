# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-10-21

# Azure Service Principal (hybrid auth with PEM certificate)
AZURE_TENANT_ID=your-tenant-id
AZURE_SPN_CLIENT_ID=your-service-principal-client-id
AZURE_PEM_PATH=azure_cert.pem
AZURE_USER_ID=cost-agent

# AWS Configuration
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# Parameter Store / Lambda
PARAM_STORE_PREFIX=/application/ecdp-config/prod/EMR-BASE/
LAMBDA_FUNCTION_NAME=app-job-submit-lambda-prod

# Safety Guardrails
MAX_CLUSTER_INSTANCES=20
AUTO_TERMINATE_MINUTES=120
MAX_TEST_COST_DOLLARS=50
